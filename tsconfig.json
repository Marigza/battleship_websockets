{
  "compilerOptions": {
    "target": "es2016",                
    //"lib": ["ESNext"],
    "module": "commonjs",  
    "rootDir": "./src",
    "moduleResolution": "node", 
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "sourceMap": true,                               
    "outDir": "./dist",
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true                                 
  },
  "exclude": [
        "./front/**/*"
  ]
}
